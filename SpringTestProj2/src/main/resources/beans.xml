<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context = "http://www.springframework.org/schema/context"
xsi:schemaLocation = "http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">




    <!--<context:component-scan base-package="com.psl.beans"></context:component-scan> -->
	<!-- bean definitions here-->
	<bean class="com.psl.beans.Employee" id="employee" autowire="byName">
      
		<!-- Setter DI        	-->
		<property name="id" value="1234"></property>
		<property name="name" value="quree"></property>
		<property name="addr" ref="addr"></property>		
		<!--Constructor DI
		<constructor-arg name="name" value="kali"></constructor-arg>-->

	</bean>   
	<bean class="com.psl.beans.Address" id="addr">
		<property name="street" value="G.t Gali"></property>
		<property name="city" value="bagodar"></property>
		<property name="zip" value="12345"></property>
	</bean>
	<bean class="com.psl.beans.Address" id="addr2">
		<property name="street" value="Pune Gali"></property>
		<property name="city" value="Mumbai"></property>
		<property name="zip" value="1245"></property>
	</bean>



</beans>